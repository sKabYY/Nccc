:: json

@set-delims '{' '}' '[' ']' ',' ':'
@set-line-comment
@set-comment-start
@set-comment-end
@set-operators
@set-quotation-marks '"'
@set-regex-marks
@set-lisp-char
@set-significant-whitespaces

json = (@or array:array object:object value)

array = '[' (@,* ',' json) ']'

object = '{' (@,* ',' pair:(key:<str> ':' value:json)) '}'

value = (@or string:<str>
             number:<number>
			 bool:/true|false/
			 null:'null')