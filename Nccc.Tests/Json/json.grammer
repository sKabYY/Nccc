:: json

@include-builtin

@set-message-locale-start 'L{'
@set-message-locale-end '}'

spacing = ~(@* \space)

str = \" (@* (@! \") <*>) \" spacing

json = (@or array:array object:object value)

array = '[' (@,* ',' json) ']'

object = '{' (@,* ',' pair:(key:str ':' value:json)) '}'

value = (@err'L{invalid value type}'
             (@or string:str
                  number:number
			      bool:(@or #'true' #'false')
			      null:'null'))